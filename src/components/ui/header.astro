---
    import Logo from "@/assets/logo.svg";
import MainNav from "./mainNav.astro";

    interface Props {
        bgImage: string;
        subtitle: string;
    }

    const { subtitle, bgImage } = Astro.props;
---

<header class="min-h-72 relative pb-72">
    <div
        class="absolute inset-0 bg-center bg-cover"
        style={{backgroundImage: `url(${bgImage})`}}
    ></div>
    <div class="absolute inset-0 bg-black/50"></div>

    <div class="relative max-w-7xl mx-auto py-3 flex items-center flex-col lg:flex-row lg:justify-between">
        <a href="/">
            <Logo class="w-72"/>
        </a>
        <MainNav />
    </div>

    <h1 class="relative text-4xl font-black uppercase text-white text-center mt-16">{subtitle}</h1>
</header>
