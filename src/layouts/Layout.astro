---
import "@/styles/global.css";

import Header from "@/components/ui/header.astro";
import Footer from "@/components/ui/footer.astro";

interface Props {
	title: string;
	subtitle: string;
	bgImage: string;
}

const { title, bgImage, subtitle } = Astro.props;
---

<!doctype html>
<html lang="es">
	<head>
		<meta charset="UTF-8" />
		<meta name="viewport" content="width=device-width, initial-scale=1.0" />
		<title>Cafeter√≠a desde 1939: {title}</title>
		<link rel="icon" type="image/svg+xml" href="/favicon.svg" />
		<link rel="preconnect" href="https://fonts.googleapis.com" />
		<link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
		<link
			href="https://fonts.googleapis.com/css2?family=PT+Sans:ital,wght@0,400;0,700;1,400;1,700&display=swap"
			rel="stylesheet"
		/>
	</head>
	<body class="bg-coffee-100">
		<Header bgImage={bgImage} subtitle={subtitle} />
		<main class="bg-white p-20 max-w-7xl mx-auto lg:-mt-20 relative">
			<slot />
		</main>

		<slot name="after-main-content" />
		<Footer />
	</body>
</html>
